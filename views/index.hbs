<div class="container mt-5">
  <form action="/">
    <div class="row" style="display: flex; justify-content:center; color:rgb(175, 146, 103)">
      <h1>URL Shortener</h1>
    </div>
    <div class="row mt-5" style="display: flex; justify-content:center;color:goldenrod">
      <i class="fas fa-link fa-5x"></i>
    </div>
    <div class="row mt-5 form-group" style="display: flex; justify-content:center">
      <label for="longUrl"></label>
      <input class="form-control" type="url" name="longUrl" id="longUrl" placeholder="Input URL here"
        style="max-width: 600px; height:50px;" required>
    </div>
    <div class="row mt-3" style="display: flex; justify-content:center">
      <button class="form-control mt-4 btn btn-warning" type="submit"
        style="max-width: 150px; height:50px; font-weight:bold">Shortener</button>
    </div>
  </form>
  <form action="">
    <div class="row mt-5" style="display: flex; justify-content:center;">
      <div class="form-group">
        <label for="shortUrl">Output</label>
        <div style="border: 1px solid #ced4da; width:600px; height:50px;display:flex;">
          <a href="" target="_blank" style="display:flex;align-items:center;">http://www.google.com</a>
        </div>
      </div>
    </div>
</div>
</form>
</div>